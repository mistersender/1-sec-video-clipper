

// adds consistent wrappers to elements that require it.
pad(via = '', largest_size = '')
  _top = site.spacing.lg
  _bottom = site.spacing.lg
  _left = site.spacing.lg
  _right = site.spacing.lg

  if(largest_size != ''){
    _top = largest_size
    _bottom = largest_size
    _left = largest_size
    _right = largest_size
  }
  
  if(via == 'horizontal')
    _top = 0
    _bottom = 0
  if(via == 'vertical')
    _left = 0
    _right = 0

  padding: (_top/3) (_right/3) (_bottom/3) (_left/3)

  @media (min-width: 568px)
    padding: (_top/2) (_right/2) (_bottom/2) (_left/2)

  @media (min-width: 850px)
    padding: _top _right _bottom _left