@require "styles/"

.slidecontainer {
  width: 600px;
}

.slider {
  font-size: 25px;
  appearance: none;
  width: 100%;
  height: 25px;
  background: #d3d3d3;
  outline: none;
  opacity: 0.7;
  transition: opacity .2s;
  margin: 2px 0;
}

.slider:hover {
  opacity: 1;
}

.slider::-webkit-slider-thumb {
  appearance: none;
  width: 1em;
  height: 25px;
  background: #4CAF50;
  cursor: pointer;
}

.completed-video {
  float: right;
  &.has-none video{
    visibility: hidden
  }
}
.video-editing 
  min-height: 370px

.video-list
  .is-checked
    list-style-type: '\2705'

.saveDate
  max-width: 4rem
.saveDate--year
  max-width: 6rem
.years + .years
  margin-left: 1em